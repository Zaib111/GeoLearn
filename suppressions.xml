<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Main class wires all modules together, so high coupling is expected -->
    <suppress checks="ClassDataAbstractionCoupling" files="Main\.java"/>
    <suppress checks="ClassFanOutComplexity" files="Main\.java"/>

    <!-- View classes naturally have high coupling due to Swing components -->
    <suppress checks="ClassDataAbstractionCoupling" files=".*View\.java"/>
    <suppress checks="ClassFanOutComplexity" files=".*View\.java"/>
    <suppress checks="MagicNumber" files=".*View\.java"/>

    <!-- Large data initialization methods -->
    <suppress checks="JavaNCSS" files="LocalQuestionRepository\.java"/>
    <suppress checks="ExecutableStatementCount" files="LocalQuestionRepository\.java"/>
    <suppress checks="MethodLength" files="LocalQuestionRepository\.java"/>
    <suppress checks="MultipleStringLiterals" files="LocalQuestionRepository\.java"/>

    <!-- API data fetching has unavoidably high complexity -->
    <suppress checks="AbbreviationAsWordInName" files="APICountryDataAccessObject\.java"/>

    <!-- Collection interactor has complex business logic -->
    <suppress checks="CyclomaticComplexity" files="CollectionInteractor\.java"/>
    <suppress checks="NPathComplexity" files="CollectionInteractor\.java"/>
    <suppress checks="ExecutableStatementCount" files="CollectionInteractor\.java"/>

    <!-- Firestore DAO needs high coupling for JSON serialization and multiple entities -->
    <suppress checks="ClassDataAbstractionCoupling" files="UserDataFireStoreDataAccessObject\.java" lines="34"/>
    <!-- Many helper methods needed for JSON serialization/deserialization -->
    <suppress checks="MethodCount" files="UserDataFireStoreDataAccessObject\.java" lines="34"/>
    <!-- Early returns needed for conditional logic between in-memory and Firestore storage -->
    <suppress checks="ReturnCount" files="UserDataFireStoreDataAccessObject\.java" lines="79,182,218,391"/>
</suppressions>
